function! Set_complete_type_python(dict, ...)
    let a:dict['def'] = "def ".s:sr("defname")."(".s:sr("params")."):\<cr>".
                \ "\"\"\"\<cr>".
                \ s:sr("docstring")."\<cr>".
                \ "\"\"\"\<cr>".
                \ s:sr("body")
    let a:dict['meth'] = "def ".s:sr("defname")."(self):\<cr>".
                \ "\"\"\"\<cr>".
                \ s:sr("docstring")."\<cr>".
                \ "\"\"\"\<cr>".
                \ s:sr("body")
    let a:dict['init'] = "def __init__(self):\<cr>".s:dr."\<cr>"
    let a:dict['new'] = "def __new__(cls):\<cr>".s:dr."\<cr>"

    let a:dict['minit'] = "def __init__(cls, name, bases, params):\<cr>".
                \ s:dr."\<cr>"
    let a:dict['mnew'] = "def __new__(cls, name, bases, params):\<cr>".
                \ s:dr."\<cr>"
    let a:dict['meta'] = "__metaclass__ = ".s:dr

    let a:dict['try'] = "try:\<cr>".s:sr("body")."\<cr>".
                \ "except ".s:sr("exception").":\<cr>".s:sr("handler")
    let a:dict['if'] = "if ".s:sr("condition").":\<cr>".s:sr("body")
    let a:dict['ife'] = a:dict['if']."\<cr>else:\<cr>".s:sr("elsebody")
    let a:dict['for'] = "for ".s:sr("var")." in ".s:sr("list").":\<cr>".
                \ s:sr("body")
endfunction

