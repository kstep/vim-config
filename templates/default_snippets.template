" set php complete {{{1
"
function! Set_complete_type_php(dict, ...)
    let a:dict['pubf'] = "public function ".s:sr("funcname")."(".s:sr("funcparams").")\<cr>".
                       \ "{\<cr>".s:sr("funcbody")."\<cr>}"
    let a:dict['ctor'] = "public function __construct(".s:sr("funcparams").")\<cr>".
                       \ "{\<cr>".s:sr("funcbody")."\<cr>}"
    let a:dict['dtor'] = "public function __destruct()\<cr>".
                       \ "{\<cr>".s:sr("funcbody")."\<cr>}"
    let a:dict['prof'] = "protected function ".s:sr("funcname")."(".s:sr("funcparams").")\<cr>".
                       \ "{\<cr>".s:sr("funcbody")."\<cr>}"
    let a:dict['prif'] = "private function ".s:sr("funcname")."(".s:sr("funcparams").")\<cr>".
                       \ "{\<cr>".s:sr("funcbody")."\<cr>}"
    let a:dict['for'] = "\<c-r>=GetInput('counter var?','counter')\<cr>".
                      \ "for ($".s:vr("counter")."; $".s:vr("counter")." < ".s:sr("maxvalue")."; $".s:vr("counter")."++)\<cr>".
                      \ "{\<cr>".s:sr("forbody")."\<cr>}"
    let a:dict['fore'] = "foreach (".s:sr("array")." as ".s:sr("key")." => ".s:sr("value").")\<cr>".
                       \ "{\<cr>".s:sr("forbody")."\<cr>}"
    let a:dict['while'] = "while (".s:dr.")\<cr>"
                        \ "{\<cr>".s:dr."\<cr>}"
    let a:dict['class'] = "class ".s:dr." extends ".s:dr." implements ".s:dr."\<cr>".
                        \ "{\<cr>".s:dr."\<cr>}"
    let a:dict['aclass'] = "abstract class ".s:dr."\<cr>".
                         \ "{\<cr>".s:dr."\<cr>}"
    let a:dict['if'] = "if (".s:dr.")\<cr>{\<cr>".s:dr."\<cr>}"
    let a:dict['ife'] = "if (".s:dr.")\<cr>{\<cr>".s:dr."\<cr>}\<cr>else\<cr>{\<cr>".s:dr."\<cr>}"
    let a:dict['mcmt'] = "/**\<cr>".
                       \ s:sr("description")."\<cr>".
                       \ "@param ".s:sr("type")." ".s:sr("description")."\<cr>".
                       \ "@return ".s:sr("type")." ".s:sr("description")."\<cr>".
                       \ "@author kstep\<cr>".
                       \ "/"
    let a:dict['pcmt'] = "/**\<cr>".
                       \ "@var ".s:sr("type")." ".s:sr("description")."\<cr>".
                       \ "@author kstep\<cr>".
                       \ "/"
    let a:dict['iface'] = "interface ".s:dr."\<cr>".
                        \ "{\<cr>".s:dr."\<cr>}"
endfunction

